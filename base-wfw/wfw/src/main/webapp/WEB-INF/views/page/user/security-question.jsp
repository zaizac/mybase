<html xmlns="http://www.w3.org/1999/xhtml" 
		xmlns:th="http://www.thymeleaf.org"
		layout:decorator="/layout/base-layout">
	<div layout:fragment="content">
		<div class="login-container">
		    <form th:action="@{/security-question}" th:object="${securityQuestion}" method="post">
		     	<fieldset>
		     		<legend th:text="#{cap.sec.quest}"></legend>
		   			<div th:if="${error}" class="alert alert-danger" role="alert"><p th:text="*{error}"></p></div>
		   			<div th:if="${msg}" class="alert alert-info" role="alert"><p th:text="*{msg}"></p></div>
		     		<div>
		           		<input class="col-xs-9" th:type="text" name="question1" th:placeholder="#{lbl.sec.quest.1}" autofocus="autofocus"/> <br/>
		           		<input class="col-xs-9" th:type="text" name="answer1" th:placeholder="#{lbl.sec.quest.1.ans}"/> <br/>
		           		<input class="col-xs-9" th:type="text" name="question2" th:placeholder="#{lbl.sec.quest.2}" autofocus="autofocus"/> <br/>
		           		<input class="col-xs-9" th:type="text" name="answer2" th:placeholder="#{lbl.sec.quest.2.ans}"/> <br/>
		           		<input class="btn btn-info" th:type="submit" th:value="#{btn.cmn.sub}" />
		     		</div>
				</fieldset>
		    </form>
		</div>
	</div>
</html>