<div layout:fragment="content">
     <div id="content-home">
     
		<div id="search_criteria">	
		<form th:action="@{/task/task-details-edit}" method="post" th:object="${dataObj}">     	
     		<legend th:text="#{lbl.tsk.dtls}"></legend>
     		<fieldset>   	
     		<input th:type="hidden"  th:field="*{taskId}"/> 		
     		<table id="fld_container">
                <tbody>
							<tr>
								<td width="39%" align="right" th:text="#{lbl.refno}"></td>
								<td width="2%">:</td>							
								<td th:text="*{refNo}"></td>
							</tr>					
							<tr>
								<td th:text="#{lbl.usr.appcant.id}"></td>
								<td>:</td>								
								<td th:text="*{applUserId}"></td>
							</tr>							
							<tr>
								<td th:text="#{lbl.usr.appcant.name}"></td>
								<td>:</td>								
								<td th:text="*{applUserName}"></td>
							</tr>							
							<tr>
								<td th:text="#{lbl.app.date}"></td>
								<td>:</td>							
								<td th:text="*{#dates.format(applDate, 'dd/MM/yyyy')}"></td>
							</tr>							
							<tr>
								<td th:text="#{lbl.app.status.id}"></td>
								<td>:</td>
								<td><input th:type="text"  th:field="*{applStsId}" /> </td>								
							</tr>							
							<tr>
								<td th:text="#{lbl.remark}"></td>
								<td>:</td>
								<td ><input th:type="text"  th:field="*{applRemark}" /> </td>								
							</tr>							
							<tr>
								<td th:text="#{lbl.mod.id}"></td>
								<td>:</td>
								<td><input th:type="text"  th:field="*{moduleId}" /> </td>							
							</tr>							
							<tr>
								<td th:text="#{lbl.ofcr.id}"></td>
								<td>:</td>
								<td><input th:type="text"  th:field="*{officerId}" /> </td>								
							</tr>							
							<tr>
								<td th:text="#{lbl.branch.id}"></td>
								<td>:</td>
								<td><input th:type="text"  th:field="*{branchId}" /> </td>								
							</tr>	
							<tr>
								<td th:text="#{lbl.type.id}"></td>
								<td>:</td>								
								<td th:text="*{typeDesc}"></td>
							</tr>						
							<tr>
								<td th:text="#{lbl.level.id}"></td>
								<td>:</td>
								<td><!-- <input th:type="text"  th:field="*{levelDesc}" />  -->
								
								<select th:field="*{levelId}" style="width: 200px;">
											<option value="">---- Select ----</option>
											<option th:each="nlevel : ${levelList}" th:value="${nlevel.levelId}"
												th:text="${nlevel.description}">
											</option>
									</select></td>							
							</tr>							
							<tr>
								<td th:text="#{lbl.trans.id}"></td>
								<td>:</td>
								<td><input th:type="text"  th:field="*{tranId}" /> </td>								
							</tr>							
							<!-- <tr>
								<td th:text="#{lbl.status.id}"></td>
								<td>:</td>
								<td><input th:type="text"  th:field="*{statusDesc}" /> </td>
							</tr>							
							<tr>
								<td th:text="#{lbl.last.status.id}"></td>
								<td>:</td>
								<td><input th:type="text"  th:field="*{lastStatusDesc}" /> </td>
							</tr>	 -->						
							<tr>
								<td th:text="#{lbl.queue.ind}"></td>
								<td>:</td>	
								<td>
									<input type="radio" th:field="*{queueInd}" value="I"/>Inboxed
									<input type="radio" th:field="*{queueInd}" value="Q" />Queue
								</td>
							</tr>
							<tr>
								<td colspan="3" style="text-align:right;">									
									<a th:href="@{/task/task-history-list(taskId=*{taskId})}"><span>View History</span></a>
								</td>
							</tr>
							<tr>
							 <td>&nbsp;</td>
							  <td>&nbsp;</td>
								<td style="text-align:left;">
									<input th:type="submit" name="cancel" th:value="#{btn.cmn.bck}"/> 	
									<input th:type="submit" name="update" th:value="#{btn.cmn.upd}"/>
