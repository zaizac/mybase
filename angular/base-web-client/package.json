{
  "name": "base-web-client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "ng-high-memory": "node --max_old_space_size=8000 ./node_modules/@angular/cli/bin/ng",
    "start": "ng serve --aot --o",
    "start-prod": "npm run ng-high-memory -- serve --prod",
    "build": "ng build --aot",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "bff-api-build": "cd ../base-bff-api && npm run bff-api-build",
    "bff-api-install": "npm i file:../base-bff-api/dist/bff-api/bff-api-0.0.0.tgz",
    "ui-master-build": "cd ../base-ui-master && npm run ui-master-build",
    "ui-master-install": "npm i file:../base-ui-master/dist/ui-master/ui-master-0.0.0.tgz",
    "web-build": "npm run bff-api-build && npm run ui-master-build && npm run extract-i18n",
    "web-install": "npm i && npm run bff-api-install && npm run ui-master-install",
    "web-start": "npm run web-build && ts-node post-script && npm run web-install && npm run start",
    "web-bff-start": "npm run bff-api-build && npm run web-install && ts-node post-script && npm run start",
    "web-ui-start": "npm run ui-master-build && npm run web-install && ts-node post-script && npm run start",
    "extract-i18n": "ng xi18n --output-path locale && node ./node_modules/ngx-i18nsupport/dist/xliffmerge/xliffmerge",
    "build:ssr": "npm run build:web-client:client-and-server-bundles && npm run compile:server",
    "build:web-client:client-and-server-bundles": "npm run build:web-client:language-bundles && ng run base-web-client:server:production",
    "build:web-client:language-bundles": "ng run base-web-client:build:production-en && ng run base-web-client:build:production-bn && ng run base-web-client:build:production-ms",
    "compile:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:ssr:node": "node dist/server",
    "serve:ssr:static": "static -p 4100 ./dist/web-client/",
    "build:client-and-server-bundles": "npm run build:language-bundles && ng run base-web-client:server:production",
    "build:language-bundles": "for lang in en ms bn ta; do ng run base-web-client:build:production-$lang; done"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.15",
    "@angular/cdk": "^7.3.7",
    "@angular/common": "~7.2.15",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.15",
    "@angular/forms": "~7.2.0",
    "@angular/http": "^7.2.0",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/platform-server": "^7.2.15",
    "@angular/router": "~7.2.0",
    "@ng-bootstrap/ng-bootstrap": "^4.2.1",
    "@nguniversal/express-engine": "^7.1.1",
    "@nguniversal/module-map-ngfactory-loader": "^7.1.1",
    "@types/express": "^4.17.1",
    "angular-calendar": "^0.25.2",
    "bff-api": "file:../base-bff-api/dist/bff-api/bff-api-0.0.0.tgz",
    "bootstrap": "^4.3.1",
    "core-js": "2.6.11",
    "date-fns": "^1.30.1",
    "express": "^4.15.2",
    "form-data": "^2.5.1",
    "localStorage": "^1.0.4",
    "ngx-i18nsupport": "^0.17.1",
    "ngx-logger": "^4.0.3",
    "ngx-smart-modal": "^7.1.1",
    "rxjs": "~6.3.3",
    "rxjs-compat": "^6.5.2",
    "session-expiration-alert": "^6.0.3",
    "tslib": "^1.9.0",
    "ui-master": "file:../base-ui-master/dist/ui-master/ui-master-0.0.0.tgz",
    "xmlhttprequest": "^1.8.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.9",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/chartist": "^0.9.46",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "angular-calendar": "^0.25.2",
    "angular-ide": "^0.9.72",
    "codelyzer": "~4.5.0",
    "fs-extra": "^8.0.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jquery": "^3.4.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-static": "^0.7.11",
    "popper.js": "^1.15.0",
    "protractor": "~5.4.0",
    "quill": "^1.3.6",
    "safer-buffer": "^2.1.2",
    "source-map-explorer": "^2.1.0",
    "ts-loader": "^5.2.0",
    "ts-node": "~7.0.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2",
    "webpack-cli": "^3.1.0"
  },
  "xliffmergeOptions": {
    "srcDir": "src/locale",
    "genDir": "src/locale",
    "i18nFile": "messages.xlf",
    "i18nBaseFile": "messages",
    "i18nFormat": "xlf",
    "encoding": "UTF-8",
    "defaultLanguage": "en",
    "languages": [
      "en",
      "ms",
      "ta",
      "bn"
    ],
    "verbose": true
  }
}
